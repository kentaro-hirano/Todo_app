<div class= "container">
  <div class= "row">
    <div class= "col-lg-2"> 
    </div>
    <div class= "col-lg-8"> 
      <h2 class= "header">編集画面</h2>
      <% if @task.errors.any? %>
        <div class="alert alert-warning">
          <ul class= "error">
            <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <%= form_with(model: @task, local: true) do |f| %>
        <div class= "form-group">
            <%= f.label :title, "やること" %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class= "form-group">
            <%= f.label :body, "詳細" %>
            <%= f.text_field :body, class: "form-control" %>
        </div>     
            <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
        <%= link_to "一覧", tasks_path, class: "btn btn-primary btns" %>
     </div>    
     <div class= "col-lg-2">
     </div>
  </div>
</div>